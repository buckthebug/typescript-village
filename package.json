{
  "scripts": {
    "test": "cross-env JEST_JUNIT_OUTPUT=.jest/app/junit.xml jest tests",
    "test:bail": "yarn test --bail",
    "test:watch": "yarn test --watch",
    "test:coverage": "yarn test --coverage"
  },
  "devDependencies": {
    "@types/jest": "^23.3.2",
    "jest": "^23.6.0",
    "jest-junit": "^5.1.0",
    "ts-jest": "^23.10.1",
    "ts-lint": "^4.5.1",
    "typescript": "^3.0.3"
  },
  "jest": {
    "transform": {
      ".(ts|tsx)": "ts-jest"
    },
    "testPathIgnorePatterns": [
      "/node_modules/",
      "/lib/",
      "/tests/__mocks__"
    ],
    "testRegex": "(/tests/.*\\.(test|spec))\\.(ts|tsx)$",
    "moduleFileExtensions": [
      "ts",
      "tsx",
      "js",
      "json"
    ],
    "moduleNameMapper": {
      "\\.(jpg|jpeg|png|gif|eot|otf|webp|svg|ttf|woff|woff2|mp4|webm|wav|mp3|m4a|aac|oga)$": "<rootDir>/tests/__mocks__/fileMock.js"
    },
    "coverageReporters": [
      "json",
      "lcov",
      "text",
      "cobertura"
    ],
    "verbose": true
  }
}
